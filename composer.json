    "type": "library",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "FootballScoreBoard\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Alessandro Ferreira",
